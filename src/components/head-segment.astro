---
const {title="Ava Time!"} = Astro.props;
const {description="You know what time it is."} = Astro.props;
const {icon="/avaspin.gif"} = Astro.props;
---

<meta charset="utf-8" />
<head>
	<meta name="viewport" content="width=device-width" />

	<meta property="og:description" content={description}>
	<meta property="og:title" content={title}>
	<meta property="og:url" content="httpe://avatime.netlify.app/">

	<meta name="twitter:card" content="summary">
	<meta name="twitter:site" content="@avatime_netlify_app">
	<meta name="twitter:title" content={title}>
	<meta name="twitter:description" content={description}>
	<meta name="twitter:image" content={icon}>

    <title>{title}</title>
</head>